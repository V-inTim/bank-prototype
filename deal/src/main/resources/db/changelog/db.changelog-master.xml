<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="V-inTim">
        <createTable tableName="client">
            <column name="client_id" type="uuid" />
            <column name="last_name" type="varchar(255)" />
            <column name="first_name" type="varchar(255)" />
            <column name="middle_name" type="varchar(255)" />
            <column name="birth_date" type="date" />
            <column name="email" type="varchar(255)" />
            <column name="gender" type="varchar(50)" />
            <column name="marital_status" type="varchar(50)" />
            <column name="dependent_amount" type="int" />
            <column name="passport_id" type="jsonb" />
            <column name="employment_id" type="jsonb" />
            <column name="account_number" type="varchar(50)" />
        </createTable>
        <addPrimaryKey columnNames="client_id" tableName="client" constraintName="pk_client"/>
    </changeSet>

    <changeSet id="2" author="V-inTim">
        <createTable tableName="credit">
            <column name="credit_id" type="uuid" />
            <column name="amount" type="decimal" />
            <column name="term" type="int" />
            <column name="monthly_payment" type="decimal" />
            <column name="rate" type="decimal" />
            <column name="psk" type="decimal" />
            <column name="payment_schedule" type="jsonb" />
            <column name="insurance_enabled" type="boolean" />
            <column name="salary_client" type="boolean" />
            <column name="credit_status" type="varchar(50)" />
        </createTable>
        <addPrimaryKey columnNames="credit_id" tableName="credit" constraintName="pk_credit"/>
    </changeSet>

    <changeSet id="3" author="V-inTim">
        <createTable tableName="statement">
            <column name="statement_id" type="uuid" />
            <column name="client_id" type="uuid" />
            <column name="credit_id" type="uuid" />
            <column name="status" type="varchar(50)" />
            <column name="creation_date" type="timestamp" />
            <column name="applied_offer" type="jsonb" />
            <column name="sign_date" type="timestamp" />
            <column name="ses_code" type="varchar(50)" />
            <column name="status_history" type="jsonb" />
        </createTable>
        <addPrimaryKey columnNames="statement_id" tableName="statement" constraintName="pk_statement"/>
        <addForeignKeyConstraint baseTableName="statement"
                                 baseColumnNames="client_id"
                                 referencedTableName="client"
                                 referencedColumnNames="client_id"
                                 constraintName="fk_client_statement"/>
        <addForeignKeyConstraint baseTableName="statement"
                                 baseColumnNames="credit_id"
                                 referencedTableName="credit"
                                 referencedColumnNames="credit_id"
                                 constraintName="fk_credit_statement"/>
    </changeSet>



</databaseChangeLog>